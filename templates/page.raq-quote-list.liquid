        <div class="row" style="border-top: 1px solid #E5E5E5;padding-top:20px;">
<div class="col-sm-12 col-xs-12" style="text-align:right;">
				<button id="sc-shopify-load-submit-popup" name="sc-shopify-load-submit-popup" type="button" class="sc-raq-btn-design-<%= sc_raq_settings.ListSubmitQuoteButton.DesignID%>">
					<span aria-hidden="true"><%= sc_raq_settings.ListSubmitQuoteButton.Text%></span>
				</button>
		</div>
        </div>
    </form>
    </div>
    </div>
</div>
</script>


<script id="tpl_sc_raq_quote_submit_form" type="text/template">
        <style type="text/css">
        #raq_quote_form_modal .sc-modal-body .row {margin: 0px 0px 10px;}
        </style>
        
        
        <!-- The Modal -->
<div id="raq_quote_form_modal" class="sc-modal">

   <!-- Modal content -->
<div class="sc-modal-content sc-shopiy-bs">
  <div class="sc-modal-header">
    <span class="sc-modal-close">&times;</span>
    <h2><%= sc_raq_settings.RequestAQuoteList.SubmitFormTitle? sc_raq_settings.RequestAQuoteList.SubmitFormTitle : 'Submit Your Quote'%></h2>
  </div>
  <div class="sc-modal-body">
    
    
    <!-- Requester Name-->
					<%
					if (sc_raq_settings.FormField.RequesterName.FieldActive=='1') {
						if (sc_raq_settings.FormField.RequesterName.Name == '1') { %>
					<div class="row" style="max-width:100%;">
