{{ 'https://unpkg.com/swiper/swiper-bundle.min.js' | script_tag }}
{{ 'https://unpkg.com/swiper/swiper-bundle.min.css' | stylesheet_tag }}
{{ 'hero-swiper.css' | asset_url | stylesheet_tag }}

{% assign mySwiper = ".swiper-" %}

<div class="swiper swiper-{{section.id}}">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
            <div class="swiper-slide slide-align-{{ block.settings.slide_txt_align }}">
                <div class="inner">
                    <div class="container txt-align-{{ block.settings.slide_txt_align }}">
                    
                        {% if block.settings.slide_image %}
                            <img src="{{ block.settings.slide_image | img_url:"1920x" }}" alt="{{ block.settings.button_label }}" />
                        {% endif %}
                        {% if block.settings.slide_title %}
                            <h2>{{ block.settings.slide_title }}</h2>
                        {% endif %}
                      	{% if block.settings.slide_title %}
                            <div class="hero-description">{{ block.settings.slide_description }}</div>
                        {% endif %}
                        {% if block.settings.button_label %}
                            <a class="hero-btn" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a>
                        {% endif %}

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function(event) { 
        var swiper = new Swiper('{{mySwiper | append: section.id }}', {
            slidesPerView: 1,
            loop: true,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    });
</script>
{% schema %}
{
	"name": "Hero Swiper",
	"tag": "section",
    "class": "hero-swiper",
	"settings": [
        {
			"type": "checkbox",
			"id": "show_arrows",
			"default": true,
			"label": "Show Arrows"
		},
		{
			"type": "checkbox",
			"id": "show_dots",
			"default": false,
			"label": "Show Arrows"
		}
	],
	"blocks": [
        {
            "type": "slide",
            "name": "Banner Slider",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "slide_image",
                    "label": "image"
                },
                {
                    "type": "text",
                    "id": "slide_title",
                    "label": "Title"
                },
				{
                    "type": "textarea",
                    "id": "slide_description",
                    "label": "Description"
                },
                {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "Button Label"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "URL"
                },
                {
                  "type": "select",
                  "id": "slide_align",
                  "label": "Slide alignment",
                  "options": [
                    {
                      "value": "left",
                      "label": "left"
                    },
                    {
                      "value": "center",
                      "label": "center"
                    },
                    {
                      "value": "right",
                      "label": "right"
                    }
                  ],
                  "default": "center"
                },
                {
                  "type": "select",
                  "id": "slide_txt_align",
                  "label": "Text alignment",
                  "options": [
                    {
                      "value": "left",
                      "label": "left"
                    },
                    {
                      "value": "center",
                      "label": "center"
                    },
                    {
                      "value": "right",
                      "label": "right"
                    }
                  ],
                  "default": "center"
                }
            ]
        }
	],
    "presets" :[
		{
            "name": "Hero Swiper",
            "blocks": [       
                {
                    "type": "slide"
                }
            ]
        }
	]
}
{% endschema %}
