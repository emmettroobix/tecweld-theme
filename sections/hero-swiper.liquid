{{ 'https://unpkg.com/swiper/swiper-bundle.min.js' | script_tag }}
{{ 'https://unpkg.com/swiper/swiper-bundle.min.css' | stylesheet_tag }}
{{ 'hero-swiper.css' | asset_url | stylesheet_tag }}

{% assign mySwiper = ".swiper-" %}

<div class="swiper swiper-{{section.id}}" style="--content-width:{{ section.settings.content_width }}px;--content-height:{{section.settings.content_height}}px;--content-height-tablet:{{section.settings.content_height_tablet}}px;--content-height-mobile:{{section.settings.content_height_mobile}}px;">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
            <div class="swiper-slide">
                <div class="inner">
                    <div class="container content-align-{{ block.settings.slide_align }}" style="--container-width:{{ section.settings.container_width }}px;">
                    	<div class="content-wrapper txt-align-{{ block.settings.slide_txt_align }}" >
                          {% if block.settings.slide_image %}
                              <img src="{{ block.settings.slide_image | img_url:"1920x" }}" alt="{{ block.settings.button_label }}" />
                          {% endif %}
                          {% if block.settings.slide_title %}
                              <h2>{{ block.settings.slide_title }}</h2>
                          {% endif %}
                          {% if block.settings.slide_title %}
                              <div class="hero-description">{{ block.settings.slide_description }}</div>
                          {% endif %}
                          {% if block.settings.button_label %}
                              <a class="hero-btn" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a>
                          {% endif %}
						</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
  	{% if section.settings.show_arrows %}
  	<div class="swiper-button-next"></div>
  	<div class="swiper-button-prev"></div>
  	{% endif %}
  
  	{% if section.settings.show_dots %}
    <div class="swiper-pagination"></div>
  	{% endif %}
  	
</div>
<script>
    document.addEventListener("DOMContentLoaded", function(event) { 
        var swiper = new Swiper('{{mySwiper | append: section.id }}', {
            slidesPerView: 1,
            loop: true,
            {% if section.settings.autoplay %}                    
            autoplay: {
                delay: {{ section.settings.autoplay_speed }},
                disableOnInteraction: false,
            },
            {% endif %}
            effect: "{{ section.settings.effect }}",
            navigation: {
              nextEl: ".swiper-button-next",
              prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    });
</script>
{% schema %}
{
	"name": "Hero Swiper",
	"tag": "section",
    "class": "hero-swiper",
	"settings": [
        {
			"type": "checkbox",
			"id": "show_arrows",
			"default": true,
			"label": "Show Arrows"
		},
		{
			"type": "checkbox",
			"id": "show_dots",
			"default": false,
			"label": "Show Dots"
		},
		{
          "type": "range",
          "id": "container_width",
          "min": 100,
          "max": 1900,
          "step": 100,
          "unit": "px",
          "label": "Content Width",
          "default": 1200
        },
		{
          "type": "range",
          "id": "content_width",
          "min": 100,
          "max": 1600,
          "step": 100,
          "unit": "px",
          "label": "Content Width",
          "default": 500
        },
        {
          "type": "range",
          "id": "content_height",
          "min": 100,
          "max": 1600,
          "step": 100,
          "unit": "px",
          "label": "Content Height: Desktop",
          "default": 500
        },
        {
          "type": "range",
          "id": "content_height_tablet",
          "min": 100,
          "max": 1600,
          "step": 50,
          "unit": "px",
          "label": "Content Height: Tablet",
          "default": 400
        },
        {
          "type": "range",
          "id": "content_height_mobile",
          "min": 100,
          "max": 1600,
          "step": 50,
          "unit": "px",
          "label": "Content Height: Mobile",
          "default": 350
        },
        {
          "type": "checkbox",
          "id": "autoplay",
          "label": "Auto play",
          "default": true
        },
        {
          "type": "range",
          "id": "autoplay_speed",
          "min": 0,
          "max": 9000,
          "step": 100,
          "unit": "px",
          "label": "Content Height",
          "default": 4000
        },
        {
          "type": "select",
          "id": "effect",
          "label": "Effect",
          "options": [
              {
                "value": "fade",
                "label": "fade"
              },
              {
                "value": "slide",
                "label": "slide"
              }
          ],
          "default": "slide"
        }
	],
	"blocks": [
        {
            "type": "slide",
            "name": "Banner Slider",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "slide_image",
                    "label": "image"
                },
                {
                    "type": "text",
                    "id": "slide_title",
                    "label": "Title"
                },
				{
                    "type": "textarea",
                    "id": "slide_description",
                    "label": "Description"
                },
                {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "Button Label"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "URL"
                },
                {
                  "type": "select",
                  "id": "slide_align",
                  "label": "Content alignment",
                  "options": [
                      {
                        "value": "left",
                        "label": "left"
                      },
                      {
                        "value": "center",
                        "label": "center"
                      },
                      {
                        "value": "right",
                        "label": "right"
                      }
                  ],
                  "default": "center"
                },
                {
                  "type": "select",
                  "id": "slide_txt_align",
                  "label": "Text alignment",
                  "options": [
                      {
                        "value": "left",
                        "label": "left"
                      },
                      {
                        "value": "center",
                        "label": "center"
                      },
                      {
                        "value": "right",
                        "label": "right"
                      }
                  ],
                  "default": "center"
                }
            ]
        }
	],
    "presets" :[
		{
            "name": "Hero Swiper",
            "blocks": [       
                {
                    "type": "slide"
                }
            ]
        }
	]
}
{% endschema %}
