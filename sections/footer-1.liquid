            {%- endif -%}
            {%- if settings.social_vimeo_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_vimeo_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Vimeo' }}">
                {%- include 'icon-vimeo' -%}
