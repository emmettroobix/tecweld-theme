<span class="site-header__link site-header__cart js-mini-cart">
  <span class="js-toggle-cart" title="{{'cart.general.title' | t}}">
    <svg class="feather feather-shopping-cart sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" data-reactid="1061"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
    <span class="icon__fallback-text">{{ 'layout.cart.title' | t }}</span>
    <span class="js-cart-count site-header__cart-indicator">{{cart.item_count}}</span>
  </span>
  <div class="mini-cart-content shadow text-center">
    <div class="js-mini-cart-content"></div>
    <div class="mini-cart-total">
      {{'cart.label.total' | t }}: <span class="js-cart-total">{{cart.total_price | money}}</span>
    </div>
    {%- include 'free-shipping' -%}
    <div class="mini-cart-taxes">
      {{'cart.general.taxes_and_shipping_at_checkout' | t}}
    </div>
    <div class="mini-cart-btns mt-4">
      <a class="btn gradient-theme js-cart-btn-checkout btn-primary w-100 {% if cart.item_count == 0 %} disabled{% endif %}" href="/checkout">{{'cart.general.checkout' | t }}</a>
      <a class="btn btn-link btn-sm js-cart-btn-cart" href="/cart">{{'cart.general.update' | t }}</a>
    </div>

    {%- if settings.safe_checkout_pcart != blank -%}
    <div class="mini-cart-safe-checkout">
      <img class="lazyload" data-src="{{ settings.safe_checkout_pcart | img_url: '500x' }}"/>
    </div>
    {%- endif -%}
  </div>
</span>